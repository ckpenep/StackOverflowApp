<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_medium"
    android:paddingTop="@dimen/margin_medium"
    android:clickable="true"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/count_answers"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/text_view_back"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:textSize="@dimen/text.16"
            android:textColor="@color/answer_color_foreground"
            android:layout_marginTop="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_12"
            android:orientation="vertical"
            tools:layout_widthPercent="70%">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Can anyone expla"
                android:textColor="@color/question_text_color"
                android:textSize="@dimen/text.18"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tags"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:textSize="@dimen/text.12"/>

                <TextView
                    android:id="@+id/date_created"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="right"
                    android:maxLines="1"
                    android:textSize="@dimen/text.12"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>